// Helpful macros borrowed from AndrewMSHowe
#define ___ &trans

// Layer numbers for use by the keymap & macros
#define MACOS     0
#define WINDOWS   1
#define M_SYMBOLS 2
#define W_SYMBOLS 3
#define NUMPAD    4
#define M_FKEYS   5
#define W_FKEYS   6
#define KB_CONFIG 7


#include "keymap_behaviors.dtsi"
